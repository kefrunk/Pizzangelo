<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:orientation="vertical" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:weightSum="12">
    <ScrollView android:id="@+id/ScrollView01"
android:layout_width="fill_parent"
android:layout_weight="10"
android:layout_height="0dp">
<TableLayout android:id="@+id/tabla_cuerpo"
         android:layout_height="wrap_content"
         android:layout_width="match_parent">
         <TableRow android:id="@+id/tableRow1" 
             android:layout_width="match_parent" 
             android:layout_height="wrap_content">
             <TextView android:background="@drawable/celda_cabecera" 
                 android:textColor="#000" android:textStyle="bold" 
                 android:gravity="center_horizontal" 
                 android:id="@+id/textView1" 
                 android:layout_weight="0.3" 
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content" 
                 android:textAppearance="?android:attr/textAppearanceLarge" 
                 android:text="Pedido"/>
         </TableRow>
         <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/tableRowpatron" 
             android:layout_width="match_parent" 
             android:layout_height="wrap_content"
             android:weightSum="11">
             <TextView android:background="@drawable/celda_cuerpo" 
                 android:id="@+id/textView2p" 
                 android:layout_weight="1" 
                 android:layout_width="0dp" 
                 android:layout_height="wrap_content" 
                 android:textAppearance="?android:attr/textAppearanceLarge" 
                 android:text="Nº" android:gravity="center_vertical|center_horizontal"/>
             <TextView android:background="@drawable/celda_cuerpo" 
                 android:id="@+id/textView1p" 
                 android:layout_weight="7.8" 
                 android:layout_width="0dp" 
                 android:layout_height="wrap_content" 
                 android:textAppearance="?android:attr/textAppearanceLarge" 
                 android:text="PRODUCTO" android:gravity="center_vertical|center_horizontal"/>
             <TextView android:background="@drawable/celda_cuerpo" 
                 android:id="@+id/textView3p"
                 android:layout_weight="2.2" 
                 android:layout_width="0dp" 
                 android:layout_height="wrap_content" 
                 android:textAppearance="?android:attr/textAppearanceMedium" 
                 android:text="PRECIO" android:gravity="center_vertical|center_horizontal"/>
             </TableRow>
                 <View android:id="@+id/separator2" 
 android:background="#a4fe3f" 
 android:layout_width = "fill_parent"
 android:layout_height="1dip"
 android:layout_centerVertical ="true"
 android:layout_alignParentTop="true"/>
             
             </TableLayout>
    </ScrollView>         
    <View android:id="@+id/separator" 
 android:background="#a4fe3f" 
 android:layout_width = "fill_parent"
 android:layout_height="2dip"
 android:layout_centerVertical ="true"
 android:layout_alignParentTop="true"/>
    
             <TableRow
             android:id="@+id/tableRowFinal" 
             android:layout_width="fill_parent" 
             android:layout_height="0dp"
             android:layout_weight="2"
             >
         <TextView
        android:id="@+id/TextViewcesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total" />
        
                    <Button
        android:id="@+id/Seguir_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elegir más" />
                             <Button
        android:id="@+id/Pedir_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedir" 
        android:layout_gravity="right"/>

                             <Button
                                 android:id="@+id/buttonreset"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Reset" />
                 
         </TableRow>
             </LinearLayout>



